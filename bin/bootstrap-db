#!/bin/bash

PASSWORD=$(date +%s | sha256sum | base64 | head -c 16 ; echo)
USERNAME="app-user"

sed -i "s/{{USERNAME}}/${USERNAME}/g" scripts/setup.sql
sed -i "s/{{PASSWORD}}/${PASSWORD}/g" scripts/setup.sql

read -p "Enter your MySQL root password: " ROOT_PASSWORD

mysql -h "127.0.0.1" -u "root" --password="${ROOT_PASSWORD}" < scripts/setup.sql

echo "Database credential pair: app-user:${PASSWORD}"